<div id="modal-container"></div>
<!--Actual page content follows from here-->
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Sources</h1>
      <p>A list of people who are known sources for the Daily Bruin.
        <a href="https://www.datatables.net/license/mit">DataTables MIT License</a>
      </p>
      <table id="sourceTable" class="table table-striped">
        <thead>
          <tr>
            <th>Name of Source</th>
            <th>Organization</th>
            <th>Phones</th>
            <th>Emails</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          {% for response in responses %}
          <tr>
            <td>{{ response.name }}</td>
            <td>{{ response.org }}</td>
            <td>{{ response.phones }}</td>
            <td>{{ response.emails }}</td>
            <td>{{ response.notes }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
<!--This loads DataTables, jQuery and Bootstrap simultaneously-->
<script type="text/javascript" src="https://cdn.datatables.net/r/bs-3.3.5/jq-2.1.4,dt-1.10.9,b-1.0.3,r-1.0.7,se-1.0.1/datatables.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.4/handlebars.min.js"></script>
<!--custom modal; the \ are necessary to prevent the server from trying to fill them up-->
<script type="text/x-handlebars" id="modal-template">
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">\{{about}}</h4>
                </div>
                <div class="modal-body">
                    \{{#if delete}}
                    <p>Are you sure you want to delete this row?</p>
                    <button class="btn btn-default submit">Yes</button>
                    \{{else}}
                    \{{#each header}}
                    <div class="form-group">
                        <label>\{{map this}}</label>
                        <input class="form-control" id="\{{this}}">
                    </div>
                    \{{/each}}
                    <p><b>NO FIELD CAN BE LEFT BLANK!</b></p>
                    <button class="btn btn-default submit">Submit</button>
                    \{{/if}}
                    <button class="btn btn-default" type="button" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</script>
<!--custom page JS-->
<script src="/javascripts/page.js"></script>
